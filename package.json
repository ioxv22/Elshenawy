{
  "name": "eslam-shennawy-physics-website",
  "version": "3.0.0",
  "description": "موقع شخصي احترافي للأستاذ إسلام الشناوي مع نظام تسجيل الدخول ولوحة إدارة",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server . -p 3000 -o",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "npx clean-css-cli -o styles.min.css styles.css",
    "minify-js": "npx terser script.js -o script.min.js",
    "validate-html": "npx html-validate index.html",
    "lighthouse": "npx lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "deploy": "npm run build && echo 'Ready for deployment'",
    "dev": "npx live-server --port=3000 --open=/",
    "test": "npm run validate-html"
  },
  "keywords": [
    "physics",
    "education",
    "tutoring",
    "uae",
    "arabic",
    "website",
    "responsive",
    "modern",
    "firebase",
    "authentication",
    "admin-panel"
  ],
  "author": {
    "name": "iivoz",
    "url": "https://t.me/iivoz"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/eslam-physics-website.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/eslam-physics-website/issues"
  },
  "homepage": "https://yourwebsite.com",
  "dependencies": {
    "firebase": "^10.7.1"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "html-validate": "^8.7.4",
    "http-server": "^14.1.1",
    "lighthouse": "^11.4.0",
    "live-server": "^1.2.2",
    "terser": "^5.26.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}